{
 "name": "LMS Lesson",
 "doctype": "DocType",
 "module": "LMS",
 "custom": 0,
 "istable": 1,
 "fields": [
  {
   "label": "Title",
   "fieldname": "title",
   "fieldtype": "Data",
   "reqd": 1,
   "in_list_view": 1
  },
  {
   "label": "Description",
   "fieldname": "description",
   "fieldtype": "Text Editor"
  },
  {
   "label": "Content Type",
   "fieldname": "content_type",
   "fieldtype": "Select",
   "options": "Text\nVideo\nLab",
   "reqd": 1,
   "in_list_view": 1
  },
  {
   "label": "Video URL",
   "fieldname": "video_url",
   "fieldtype": "Data",
   "depends_on": "eval:doc.content_type=='Video'"
  },
  {
   "label": "Content",
   "fieldname": "content",
   "fieldtype": "Text Editor",
   "depends_on": "eval:doc.content_type=='Text'"
  },
  {
   "label": "Is Free Preview",
   "fieldname": "is_free_preview",
   "fieldtype": "Check",
   "description": "Mark this lesson as free preview"
  }
 ],
 "permissions": [
  {
   "role": "System Manager",
   "read": 1,
   "write": 1,
   "create": 1,
   "delete": 1
  },
  {
   "role": "Administrator",
   "read": 1,
   "write": 1,
   "create": 1,
   "delete": 1
  }
 ]
}